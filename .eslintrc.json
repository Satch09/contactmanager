{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended",
    "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-mixed-spaces-and-tabs":["off", "smart-tabs"],

        "eqeqeq": ["error", "always"],
        "printWidth": 250,
        "jsxBracketSameLine": true,
        "array-bracket-newline": ["error", "consistent"],
        "capitalized-comments": ["warn", "always"],
        "no-var": "off",
        "no-empty": "off",
        "flatTernaryExpressions": true,
        "curly": "error",
        "no-console": "off",
        "no-undef": "off",
        "space-before-function-paren": ["error", "never"],
        "space-unary-ops": "error",
        "array-bracket-spacing": ["error", "never"],
        "bracketSpacing": true,
        "useTabs": true,
        "no-multiple-empty-lines": "error",
        "no-unused-vars": "off",
        "new-cap": ["error", {
            "newIsCap": true,
            "capIsNew": false
        }],
        "key-spacing": ["error", {
            "align": "colon"
        }],
        "function-paren-newline": ["error", "multiline"],
        "no-new": "error",
        "react/quotes": "single"
    }
}